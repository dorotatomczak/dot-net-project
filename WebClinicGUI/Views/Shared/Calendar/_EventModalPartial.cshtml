@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

<div id="modal-event-show" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["Details"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="block block-transparent remove-margin-b">
                    <table class="table">
                        <tr>
                            <th>@Localizer["Time"]:</th>
                            <td id="time"></td>
                        </tr>
                        <tr>
                            <th>@Localizer["Patient"]:</th>
                            <td id="patient"></td>
                        </tr>
                        <tr>
                            <th>@Localizer["Physician"]:</th>
                            <td id="physician"></td>
                        </tr>
                        <tr>
                            <th>@Localizer["Type"]:</th>
                            <td hidden id="cure">@Localizer["Cure"]</td>
                            <td hidden id="control-check">@Localizer["ControlCheck"]</td>
                            <td hidden id="consultation">@Localizer["Consultation"]</td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-primary btn-default" type="button" data-dismiss="modal">@Localizer["Close"]</button>
                    @{
                        if (User.IsInRole("Receptionist"))
                        {
                            <a id="cancel-btn" class="btn btn-outline-danger"  asp-area="" asp-controller="Appointments" asp-action="Cancel" asp-route-id="dummyId">@Localizer["Cancel Appointment"]</a>
                        }
                     }
                </div>
            </div>
        </div>
    </div>
</div>