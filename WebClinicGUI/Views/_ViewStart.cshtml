@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        if (HttpContextAccessor.HttpContext.User.IsInRole("Patient"))
        {
            Layout = "_PatientLayout";
        }
        else if (HttpContextAccessor.HttpContext.User.IsInRole("Physician"))
        {
            Layout = "_PhysicianLayout";
        }
        else if (HttpContextAccessor.HttpContext.User.IsInRole("Receptionist"))
        {
            Layout = "_ReceptionistLayout";
        }
    }
    else
    {
        Layout = "_LoginLayout";
    }
}
